{
  "name": "repop-log-client",
  "version": "1.0.0",
  "description": "RepopTracker log reporter - watches EQ log and reports slain events",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac"
  },
  "build": {
    "appId": "com.repoptracker.logclient",
    "productName": "RepopTracker Log Reporter",
    "directories": { "output": "out" },
    "files": ["dist/**/*", "src/renderer/**/*"],
    "win": { "target": ["nsis", "portable"], "signAndEditExecutable": false },
    "mac": { "target": ["dmg"], "category": "public.app-category.games" }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  }
}
